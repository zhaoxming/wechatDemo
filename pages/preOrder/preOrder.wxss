/* pages/preOrder/preOrder.wxss */
@import '../../style/common.wxss';

page {
  background-color: #efeff4;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__bd {
  border-top: 1rpx solid #d9d9d9;
}

.page__hd {
  padding: 20px;
  background-color: #fff;
  font-size: 14px;
}

.page__title {
  text-align: left;
  font-size: 16px;
  font-weight: 400;
  padding: 15px;
}

.page__desc {
  color: #888;
  text-align: left;
  font-size: 14px;
}

.weui-textarea {
  display: block;
  width: 100%;
  height: 100%;
  background-color: #efeff4;
}

.weui-cell_text:before {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  color: #d9d9d9;
  left: 15px;
}

.weui-cell_text {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  margin-top: -20px;
}

.weui-cells__title {
  margin-bottom: 0.3em;
  padding-left: 15px;
  padding-right: 15px;
  font-weight: 500;
  color: #000;
  font-size: 16px;
  border-top: 1px solid #d9d9d9;
}

.weui-cell_input {
  font-weight: lighter;
}

button[type="primary"] {
  color: #fff;
  background-color: #c33;
}

.button-hover[type="primary"] {
  color: #000;
  background-color: #d9d9d9;
}

.weui-cells:after {
  bottom: 0;
  border-bottom: 1rpx solid #fff;
}

.text-panel {
  font-size: 14px;
  text-align: center;
  margin: 20px;
}

.weui-flex__item {
  text-align: center;
}

.date-label {
  width: 75%;
}

.date-text {
  width: 60px;
  border: 1px solid #d9d9d9;
  text-align: center;
  border-radius: 80px;
}
