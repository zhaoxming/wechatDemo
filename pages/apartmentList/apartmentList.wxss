/* pages/apartmentList/apartmentList.wxss */
@import '../../style/common.wxss';

.pannel-img-upon {
  margin-top: 40px;
  width: 240rpx;
  height: 60rpx;
  float: left;
  position: absolute;
  background-color: #000;
  text-align: center;
  opacity: 0.5;
  color: #fff;
  font-size: 12px;
}

.weui-media-box_appmsg {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.price {
  color: #f00;
  font-size: 16px;
  font-weight: bold;
}

.pannel-img-downon {
  margin-top: 213px;
  padding-left: 20px;
  width: 100%;
  height: 60rpx;
  float: left;
  position: absolute;
  background-color: #000;
  text-align: left;
  opacity: 0.5;
  color: #fff;
  font-size: 12px;
}

.weui-media-box {
  position: relative;
}

.mini-btn {
  margin: 5px 15px 0px 50%;
  width: 40%;
  height: 25px;
  line-height: 25px;
  text-align: center;
  font-size: 12px;
}

.weui-media-box__thumb {
  width: 100%;
  vertical-align: top;
}

.weui-media-box__thumb {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.weui-media-box__hd_in-appmsg {
  margin-right: 0.8em;
  width: 100%;
  height: 240px;
  text-align: center;
}

.weui-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.weui-flex__item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.weui-media-box__bd_in-appmsg {
  margin: 10px;
}

.weui-grid__label {
  width: auto;
  min-width: 60px;
  float: left;
  border: 1px solid #d7d6dc;
  text-align: center;
  border-radius: 5px;
  background-color: #fff;
  line-height: 28px;
  height: 28px;
  font-weight: lighter;
  font-size: 14px;
}

.placeholder {
  margin-right: 5px;
  text-align: left;
  font-size: 20px;
  font-weight: 500;
  height: 32px;
  line-height: 32px;
}

.star {
  height: 12px;
  width: 12px;
}

.texi {
  height: 14px;
  width: 16px;
}

.walk {
  height: 14px;
  width: 16px;
}
