/**index.wxss**/
@import '../../style/common.wxss';

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
  width: 14px;
  height: 14px;
}

.city {
  margin: 40rpx -4rpx;
  text-align: center;
}

.all-tity {
  text-align: right;
  font-size: 14px;
  color: #f00;
  margin-right: 10rpx;
}

.city-weui-grid__label {
  margin-top: 30%;
  width: 100%;
  float: left;
  position: absolute;
  color: #fff;
}

.weui-grids {
  overflow: hidden;
  margin-top: 10px;
}

.city-Weui-grid {
  position: relative;
  float: left;
  width: 33.333333%;
  height: 200rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
}

.weui-grid_active {
  background-color: #ececec;
}

.weui-grid__icon {
  display: block;
  width: 28px;
  height: 28px;
  margin: 0 auto;
}

.weui-grid__label {
  margin-top: 25%;
  width: 100%;
  float: left;
  position: absolute;
  color: #fff;
}

.country {
  margin: 10px 0px;
  text-align: center;
}

.country-Weui-grid {
  position: relative;
  float: left;
  margin: 10px 2.5% 10px 2.5%;
  width: 45%;
  box-sizing: border-box;
  height: 60%;
}

.city-img-grid {
  width: 89.8%;
  height: 89.8%;
  text-align: center;
  border-radius: 30rpx;
}

.country-img-grid {
  width: 100%;
  height: 85px;
  text-align: center;
}

.placeholder {
  margin-right: 5px;
  text-align: left;
  font-size: 14px;
}

.slide-image {
  width: 100%;
  height: 80%;
}

.swiper-item-desc {
  width: 100px;
  text-align: left;
}

.swiper-item-desc_name {
  width: 100px;
  text-align: left;
}

.swiper-item-desc_mark {
  width: 100px;
  text-align: left;
  font-size: 12px;
  color: #696969;
}

.swiper-item-desc_price {
  width: 100px;
  text-align: left;
  color: #f00;
}

.swiper-view {
  width: 1500px;
  height: 160px;
}

.hot-apartments {
  height: 200px;
}

.city-to-all {
  height: 10px;
  width: 10px;
}

swiper {
  display: block;
  height: 100%;
}

.foot-img {
  width: 100%;
  height: 140px;
  margin-top: -30px;
}

image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}

.order-free {
  width: 100%;
  height: 100%;
  text-align: center;
}

.foot {
  width: 100%;
  height: 120px;
  background: #fff;
}

.img-foot {
  width: 40%;
  height: 90%;
}

.foot-text {
  width: 100%;
  height: 20px;
  line-height: 20px;
}

.img-flex {
  width: 100%;
  height: 80%;
  text-align: center;
  padding-top: 20px;
}

.text-flex {
  width: 100%;
  height: 20%;
  text-align: center;
  font-size: 14px;
}
